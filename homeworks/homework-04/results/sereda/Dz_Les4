//1.Изменение порядка массива на противоположный
using System.Threading.Channels;

int[] nums1 = { 1, 2, 3, 4 };
Array.Reverse(nums1);
foreach (int num1 in nums1)
    Console.WriteLine(num1);

//2.Найти четные/нечетные элементы массива
for (int i = 0; i<=4; i++)
{
    if (i%2 == 0)
    {
        Console.WriteLine("Чётные {0}", i);
    }
    if(i%2 !=0)
    {
        Console.WriteLine("Нечетные {0}", i);
    }
}
Console.ReadKey();
return 0;
