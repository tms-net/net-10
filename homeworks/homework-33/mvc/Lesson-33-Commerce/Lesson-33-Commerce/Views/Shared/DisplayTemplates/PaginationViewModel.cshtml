@model PaginationViewModel

<!-- Pagination Start -->
<div class="col-12 pb-1">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mb-3">
            <li class="page-item @((Model.IsFirstPage ? "disabled" : ""))">
                <a class="page-link" href="@(Url.Action(ViewContext.RouteData.Values["action"]?.ToString(), new { page = Model.PreviousPage }))" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @for (int page = 1; page <= Model.PageCount; page++)
            {
                <li class="page-item @((Model.CurrentPage == page ? "active" : ""))">
                    <a class="page-link" href="@(Url.Action(ViewContext.RouteData.Values["action"]?.ToString(), new { page }))">@(page)</a>
                </li>
            }
            <li class="page-item @((Model.IsLastPage ? "disabled" : ""))">
                <a class="page-link" href="@(Url.Action(ViewContext.RouteData.Values["action"]?.ToString(), new { page = Model.NextPage }))" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
<!-- Pagination End -->
